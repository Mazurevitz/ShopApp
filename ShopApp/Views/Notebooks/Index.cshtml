@model ShopApp.Models.NotebookGPUViewModel
@{
    ViewData["Title"] = "Notebooks list";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>


<input type="button" name="submitbutton1" value="Refresh database" onclick="location.href='@Url.Action("DownloadData", "Notebooks")'" />


<form asp-controller="Notebooks" asp-action="Index" method="get">
    <p>
        <select asp-for="notebookGPU" asp-items="Model.GPUs">
            <option value="">All</option>
        </select>


        Title: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
    </p>
</form>



<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.notebooksList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notebooksList[0].GPU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notebooksList[0].RAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notebooksList[0].Processor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notebooksList[0].ScreenSizeInch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notebooksList[0].ImageBytes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.notebooksList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GPU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RAM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Processor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScreenSizeInch)
            </td>
            <td>
                <img src="data:image;base64,@System.Convert.ToBase64String(item.ImageBytes)" height="80"; object-fit: contain'  />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
